<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="250dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="17dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/img_promotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default" />

        <TextView
            android:id="@+id/tv_promotion_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#65554242"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:padding="5sp"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_promotion_chi_tiet"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/white_round_bg"
            android:drawableRight="@mipmap/ic_smart_next"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="Chi tiáº¿t"
            android:textColor="#9F000000" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
